RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# URL rewriting for signup
RewriteRule ^signup$ index.php?action=signup [L,QSA]

# URL rewriting for login
RewriteRule ^login$ index.php?action=login [L,QSA]

# URL rewriting for verify Token
RewriteRule ^verifyToken$ index.php?action=verifyToken [L,QSA]

# URL rewriting for contact
RewriteRule ^contact$ index.php?action=contact [L,QSA]

# ADMIN - PRODUCTS -------------------------------------------------------

# URL rewriting for get products (admin)
RewriteRule ^getProduct$ index.php?adminAction=getProduct [L,QSA]

# URL rewriting for add products (admin)
RewriteRule ^addProduct$ index.php?adminAction=addProduct [L,QSA]

# URL rewriting for get products by id (admin)
RewriteRule ^getProductById/([0-9]+)$ index.php?adminAction=getProductById&productId=$1 [L,QSA]

# URL rewriting for update products (admin)
RewriteRule ^updateProduct$ index.php?adminAction=updateProduct [L,QSA]

# URL rewriting for delete products (admin)
RewriteRule ^deleteProduct$ index.php?adminAction=deleteProduct [L,QSA]


